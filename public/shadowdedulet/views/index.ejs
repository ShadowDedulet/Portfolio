<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500&family=Montserrat:wght@100;200;300;400;500&display=swap');
    </style>

    <title>ShadowDedulet</title>
    <link rel="icon" href="shadowdedulet/img/logo2.png">
    <link rel="stylesheet" type="text/css" href="shadowdedulet/css/style.css">
    <script src="shadowdedulet/js/index.js" defer></script>
</head>

<body>
    <%- include('partials/header.ejs', SITE, PARAMS) %>

    <%- include('partials/signForm.ejs', SITE) %>

    <div id='content' class="content">
        <% for (let project of projects) { %>
        <div class="project" id=<%= project.name.toLowerCase() %>>
            <div class="project-preview"></div>

            <img class="project-img" src="shadowdedulet/img/projects/<%= project.name.toLowerCase()%>.png" alt="K5">
            <p class="project-description"><%- project.description %></p>

            <div class="project-name">
                <a href="<%= project.url %>" target="blank"><%= project.name %></a>
            </div>

            <% let info = '' %>
            <% for (let tag of project.tags) { %>
            <% info += `${tag} ` %>
            <% } %>
            <% info += `\r\n${project.dateStr}` %>
            <p class="project-info"><%- info %> </p>
        </div>
        <% } %>
    </div>

    <%- include('partials/footer.ejs', SITE, PARAMS, CUR_URL) %>
</body>

</html>